# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

# JavaScript/TypeScript files
[*.{js,jsx,ts,tsx}]
indent_size = 2
quote_type = double

# JSON files
[*.json]
indent_size = 2
max_line_length = 120

# YAML files
[*.{yml,yaml}]
indent_size = 2
quote_type = single

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

# Shell scripts
[*.sh]
indent_size = 2

# Docker files
[Dockerfile*]
indent_size = 2

# SQL files
[*.sql]
indent_size = 2

# Configuration files
[*.{toml,ini}]
indent_size = 2

# Package files
[package.json]
indent_size = 2

# CSS/SCSS files
[*.{css,scss,sass}]
indent_size = 2

# HTML files
[*.html]
indent_size = 2

# XML files
[*.xml]
indent_size = 2